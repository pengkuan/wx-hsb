view {
  overflow: hidden;
  box-sizing: border-box;
  font-family: "Microsoft YaHei";
}

page {
  background: #f9f9fb;
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100%;
  justify-content: space-between;
}

.text-overflow {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.sub-title {
  font-weight: bold;
  font-size: 32rpx;
}

.common-width {
  width: 670rpx;
}

.common-padding {
  padding: 0 40rpx;
}

.common-margin {
  margin: 0 40rpx;
}

.padding-left {
  padding-left: 40rpx;
}

.padding-right {
  padding-right: 40rpx;
}