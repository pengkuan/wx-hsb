/* 覆盖默认样式 */
view {
  overflow: hidden;
  font-weight: normal;
  box-sizing: border-box;
  font-stretch: normal;
}

button, input {
  font-weight: normal;
}

page {
  display: flex;
  min-height: 100%;
  background: #f9f9fb;
}

.modal-dialog {
  background: #fff !important;
}

.modal-content {
  padding: 50rpx 32rpx;
  background: #fff !important;
}

/* 自定义公共样式 */
.container {
  display: flex;
  flex: 1;
  min-height: 100%;
  flex-direction: column;
}

.text-overflow {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.sub-title {
  font-weight: bold;
  font-size: 36rpx;
}

.common-width {
  width: 670rpx;
}

.common-padding {
  padding: 0 40rpx;
}

.common-margin {
  margin: 0 40rpx;
}

.padding-left {
  padding-left: 40rpx;
}

.padding-right {
  padding-right: 40rpx;
}


/** grid **/
.grid-cols {
  overflow: hidden;
}

.grid-col {
  float: left;
  width: 25%;
}

.grid-cols-2 .grid-col {
  width: 50%;
}

.grid-cols-3 .grid-col {
  width: 33.3333%;
}

/** mue-button **/
.page .mue-button {
  border: none;
  border-radius: 0;
  background: transparent;
}

.page .mue-button::after {
  display: none;
}

.divider {
  height: 20rpx;
  background: #f9f9fb;
}

.input-ph {
  color: #cacee0;
  font-size: 26rpx;
}

.font-medium {
  font-family: PingFang-SC-Medium;
}

.font-bold {
  font-family: PingFang-SC-Bold;
}

.font-heavy {
  font-family: PingFang-SC-Heavy;
}

/** 底部提交按钮 **/
.mue-footer {
  z-index: 2;
  position: fixed;
  bottom: 0;
  width: 100%;
  padding: 20rpx 40rpx;
  background-color: #fff;
}

.mue-footer .mue-button {
  display: block;
  width: 100%;
  height: 90rpx;
  padding: 0;
  color: #fff;
  font-size: 32rpx;
  line-height: 90rpx;
  border-radius: 4rpx;
  text-align: center;
  background-color: #fabe00;
}

.mue-footer .mue-button:after {
  border-radius: 4rpx;
  border-color: transparent;
}

/** disabled button */
.mue-footer .mue-button[disabled] {
  color: #cacee0;
  background-color: #fff;
}

.mue-footer .mue-button[disabled]:after {
  border-color: #cacee0;
}