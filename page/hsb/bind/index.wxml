<view class="page">
    <view class="logo"></view>
    <view class="form">
        <input placeholder="手机号码" maxlength="11" bindinput="telHandler" auto-focus/>
        <view class="code-wrapper">
            <input class="input-code" bindinput="codeHandler" type="number" placeholder="验证码" maxlength="6" auto-focus/>
            <button class="button" bindtap="getCode">获取验证码</button>
        </view>
        <button class="button login-button" bindtap="submit">提交</button>
    </view>
</view>