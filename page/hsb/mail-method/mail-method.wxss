.mail-recovery {
    font-family: "微软雅黑";
}
.mail-input-list {
    background-size: 12px;
    background-position: 10px 50%;
    font-family: "微软雅黑";
    color: #999;
    height: 46px;
    line-height: 46px;
    background: #fff;
    font-size: 14px;
    display: flex;
}
.mail-list-left {
    width: 82px;
    float: left;
    text-align: right;
    position: relative;
}
.mail-list-right {
    flex: 1;
    float: left;
    border-bottom: 1px solid #f5f5f5;
    position: relative;
}
.mail-input {
    margin-left: 12px;
    font-size: 14px;
    line-height: 46px;
    height: 46px;
    font-family: "微软雅黑";
    color: #666;
}
.mail-text-view {
    width: 94%;
    overflow: hidden;
    background: #f6eac4;
    padding: 10px 3%;
    font-size: 12px;
    line-height: 22px;
    color: #666666;
}
.popup-child-block,.popup-child-none {
    width: 100%;
    line-height: 40px;
    font-size: 16px;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate3d(-50%, -50%, 0);
    z-index: 4;
    color: #fff;
    text-align: center;
    -webkit-transition: all .4s linear;
    transition: all .4s linear;
}
.popup-child-block {
    opacity: 1;
}
.popup-child-none {
    opacity: 0;
}
.popup-child-text {
    padding: 10px 20px;
    background: #222;
    border-radius: 4px;
    font-family: "微软雅黑";
}
.order-btn-true,.order-btn-false {
    width: 94%;
    text-align: center;
    line-height: 40px;
    border-radius: 4px;
    position: fixed;
    bottom: 20px;
    left: 3%;
    font-size: 14px;
    -webkit-transition: all .3s linear;
    transition: all .3s linear;
}
.order-btn-true {
    background: #f9be00;
    color: #333;
}
.order-btn-false {
    background: #ccc;
    color: #fff;
}
.mail-input-list-tel {
    background-size: 12px;
    background-position: 10px 50%;
    font-family: "微软雅黑";
    color: #999;
    height: 46px;
    line-height: 46px;
    background: #fff;
    font-size: 14px;
    display: flex;
}
.mail-icon {
    width   : 20px;
    height  : 20px;
    float: left;
    margin: 13px 3% 0 3%;
}
.mail-list-left-tel {
    width: 68px;
    float: left;
    display: flex;
    justify-content: space-between;
    -webkit-justify-content: space-between;
}
.mail-list-right-tel {
    flex: 1;
    float: left;
    border-bottom: 1px solid #f5f5f5;
    position: relative;
    height: 46px;
}
.mail-input-tel {
    margin-left: 12px;
    font-size: 14px;
    line-height: 46px;
    height: 46px;
    font-family: "微软雅黑";
    color: #666;
    width: 100%;
}
.mask{
    position:fixed;
    top:0;
    bottom:0;
    width:100%;
    background:rgba(0,0,0,0.5);
}
.mask .loading{
    width:120rpx;
    height:120rpx;
    position:absolute;
    top:0;
    bottom:0;
    left:0;
    right:0;
    margin:auto;
}
.mask-false{
    display:none;
}
.mask-true{
    display:block;
}