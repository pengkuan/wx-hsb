
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items : center;
  justify-content: flex-start;
  background: white;
}

.top-bar {
    position: fixed;
    width: 100%;
    height: 58rpx;
    line-height: 58rpx;
    color: white;
    text-align: center;
    font-size: 22rpx;
    background-color: #EDB603;
}

.evaluate-price-bg {
    display: flex;
    position: relative;
    background: white;
    margin-top: 58rpx;
    height: 300rpx;
    width: 100%;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

.evaluate-title-text {
    position: relative;
    color: #333333;
    font-size: 22rpx;
    text-align: center;
    margin: 0 auto;
}

.rmb-black-text  {
    position: relative;
    color: #E6413C;
    font-size: 32rpx;
    text-align: center;
    margin: 0 auto;
    margin-bottom: 15rpx;
    margin-right: 8rpx;
    font-weight: bold;
}

.evaluate-price-text-bg {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: flex-end;
    flex-wrap: nowrap;
}

.evaluate-price-text {
    position: relative;
    color: #E6413C;
    font-size: 80rpx;
}

.evaluate-model-line-bg  {
    display: flex;
    width: 96%;
    flex-direction: row;
    align-items: center;
    padding: 2%;


}

.yellow-square-point {
    width: 7rpx;
    height: 30rpx;
    background-color: #F9BD00;
    margin-right: 15rpx;
}

 .evaluate-model-title  {
    font-size: 22rpx;
    margin-right: 12rpx;
}

.reevaluate-text {
    display: flex;
    font-size: 22rpx;
    text-align: right;
    color: #F9BD00
}

.answer-items-bg {
    display: flex;
    position: relative;
    justify-content:  center;
    align-items: center;
    width: 100%;
    flex-wrap: wrap;

}

.answer-item {
    display: block;
    position: relative;
    text-align: center;
    height: 45rpx;
    line-height: 45rpx;
    width: 31%;
    font-size: 22rpx;
    background-color: #E5E5E5;
    margin:8rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.arrow {
    display: flex;
    justify-content: center;
    align-items: center;
}

.falldown-text-bg {
    display: flex;
    flex-direction: row;
    
}