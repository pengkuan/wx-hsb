
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items : flex-start;
  justify-content: flex-start;
}

.top-bar {
    position: fixed;
    width: 100%;
    height: 58rpx;
    line-height: 58rpx;
    color: #ACA8A0;
    text-align: center;
    font-size: 22rpx;
    background-color: #FEF2CC;
}

.evaluate-price-bg {
    display: flex;
    position: relative;
    background: #F9BD00;
    margin-top: 58rpx;
    height: 300rpx;
    width: 100%;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

.evaluate-title-text {
    position: relative;
    color: #333333;
    font-size: 22rpx;
    text-align: center;
    margin: 0 auto;
}

.rmb-black-text  {
    position: relative;
    color: #333333;
    font-size: 32rpx;
    text-align: center;
    margin: 0 auto;
    margin-bottom: 15rpx;
    margin-right: 8rpx;
    font-weight: bold;
}

.evaluate-price-text-bg {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: flex-end;
    flex-wrap: nowrap;
}

.evaluate-price-text {
    position: relative;
    color: #333333;
    font-size: 80rpx;
}

.evaluate-model-line-bg  {
    display: flex;
    width: 96%;
    flex-direction: row;
    align-items: center;
    padding: 2%;


}

.yellow-square-point {
    width: 7rpx;
    height: 30rpx;
    background-color: #F9BD00;
    margin-right: 15rpx;
}

 .evaluate-model-title  {
    font-size: 22rpx;
    margin-right: 12rpx;
}

.reevaluate-text {
    display: flex;
    font-size: 22rpx;
    text-align: right;
    color: #F9BD00
}