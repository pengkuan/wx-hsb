<view class="page">
    <view class="topcontainer">
        <progress class="top-progress" percent="{{choosePercent}}" stroke-width="30" color="#f9be00" />
        <text class="top-progress-text">{{modelname}}评估进度{{choosePercent}}%</text>
        <text class="top-desc-text">请根据实际情况评估您的手机；如最终检测结果与您评估一致，收款速度提升30%以上！</text>
    </view>
    <scroll-view scroll-y="true" scroll-into-view="{{scrollToView}}" 
                style="height : {{wHeight}}px;margin-top: 78px;margin-bottom:30rpx;padding-top:25rpx" scroll-with-animation="true" >
        <view class="listcontainer">
            <view id="option_{{optionIndex}}" class="select-option-list" wx:for="{{selectOptions}}" wx:key="id"
                  wx:for-item="optionItem" wx:for-index="optionIndex">
                <view class="select-title{{optionItem.question.length > 0 ? '' : '-gray'}}">{{optionItem.name}}</view>
                <view style="display:flex;flex-wrap:wrap;width:100%;justify-content:space-between;">
                    <view class="select-question-list" wx:for="{{optionItem.question}}" wx:key="id"
                          wx:for-item="questionItem" wx:for-index="questionIndex" bindtap="chooseItem"
                          data-question-id="{{optionItem.id}}" data-answer-id="{{questionItem.id}}"
                          data-index="{{optionIndex}}">
                        <view class="select-question-item-{{questionItem.isSelected ? 'selected' : 'unselected'}}">{{questionItem.name}}</view>
                    </view>
                </view>
            </view>
        </view>
        <view class="bottom-btn-{{evaluateEnable ? 'enable' : 'disable'}}" bindtap="onEvaluateBtnClicked">查看估价</view>
    </scroll-view>
</view>