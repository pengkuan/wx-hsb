.page {
    justify-content: flex-start;
    flex-direction: column;
    background: #FFFFFF;
}

.topcontainer {
    position: fixed;
    width: 100%;
    background-color: #F0F0F0;
    justify-content: flex-start;
    flex-direction: column;
    z-index: 10;
}

.top-progress-text {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 12rpx;
    left: 0rpx;
    font-size: 28rpx;
    text-align: center;
}

.top-progress {
    width: 100%;
    top: 0rpx;
    left: 0rpx;
}

.top-desc-text {
    font-size: 28rpx;
    color: #A3A3A3;
    width: 100%;
    padding: 12rpx;
}

.listcontainer {
    margin-top: 78px;
}

.select-option-list {
    position: relative;
    width: 100%;
    padding-left: 12rpx;
    padding-right: 12rpx;
    margin-bottom: 12rpx;
    flex-direction: row;
    
}

.select-title {
    font-size: 38rpx;
    margin-bottom: 14rpx;
    width: 100%;
}

.select-question-list {
    position: relative;
    display: inline-block;
    flex: 1;
    width: 47%;
    margin: 7rpx;
}

.select-question-item-selected {
    display: flex;
    background-color: #F9BE00;
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    justify-content: center;
    align-content: center;
    color : #FFFFFF;
    font-size: 24rpx;  
}

.select-question-item-unselected {
    background-color: #F5F5F5;
    display: flex;
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    justify-content: center;
    align-content: center;
    color : #666666;
    font-size: 24rpx;
    
    
}

.bottom-btn-enable {
    position: relative;
    margin: 0 auto;
    width: 90%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    vertical-align: center;
    border-radius: 24rpx;
    background-color: #F9BE00;
    font-size: 32rpx;
    color: white;
}

.bottom-btn-disable {
    position: relative;
    margin: 0 auto;
    width: 90%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    vertical-align: center;
    border-radius: 24rpx;
    background-color: #CCCCCC;
    font-size: 32rpx;
    color: white;
}