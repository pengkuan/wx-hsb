.page {
    justify-content: flex-start;
    flex-direction: column;
}

.topcontainer {
    position: relative;
    width: 100%;
}

.top-progress-text {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 12rpx;
    left: 0rpx;
    font-size: 28rpx;
    text-align: center;
}

.top-progress {
    width: 100%;
    top: 0rpx;
    left: 0rpx;
}

.top-desc-text {
    font-size: 28rpx;
    color: #A3A3A3;
    width: 100%
}

.top-desc-bg {
    width: 100%;
    height: 100rpx;
    padding-left: 8rpx;
    padding-right: 8rpx;
    justify-content: center;
    align-items: center;
    background-color: #F0F0F0;
    margin-bottom: 28rpx;
    
}