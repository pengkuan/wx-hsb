.page {
    justify-content: flex-start;
    flex-direction: column;
}

.topcontainer {
    position: relative;
    width: 100%;
}

.top-progress-text {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 12rpx;
    left: 0rpx;
    font-size: 28rpx;
    text-align: center;
}

.top-progress {
    width: 100%;
    top: 0rpx;
    left: 0rpx;
}

.top-desc-text {
    font-size: 28rpx;
    color: #A3A3A3;
    width: 100%
}

.top-desc-bg {
    width: 100%;
    height: 100rpx;
    padding-left: 8rpx;
    padding-right: 8rpx;
    justify-content: center;
    align-items: center;
    background-color: #F0F0F0;
    margin-bottom: 28rpx;
    
}

.select-option-list {
    position: relative;
    width: 100%;
    padding-left: 12rpx;
    padding-right: 12rpx;
    margin-bottom: 12rpx;
    flex-direction: row;
    
}

.select-title {
    font-size: 38rpx;
    margin-bottom: 14rpx;
    width: 100%;
}

.select-question-list {
    position: relative;
    display: inline-block;
    flex: 1;
    width: 45%;
    margin: 7rpx;
}

.select-question-item-select {
    background-color: #F9BE00;
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    justify-content: center;
    align-content: center;
    color : #FFFFFF;
    font-size: 24rpx;
    
    
}

