@import "../../components/search-entry.wxss";

/** swiper **/
.swiper-wrapper {
    width: 670rpx;
    margin: 0 auto;
    margin-top: 40rpx;
    border-radius: 8rpx;
    background: #fff;
}

.swiper-wrapper .slide-image {
    width: 100%;
    height: 100%;
}

/** category **/
.cate-cols {
    display: flex;
    width: 100%;
    padding: 20rpx 40rpx;
    background-color: #fff;
    justify-content: space-between;
}

.cate-col {
    display: flex;
    width: 200rpx;
    height: 200rpx;
    color: #7c829d;
    font-size: 28rpx;
    text-align: center;
    font-weight: normal;
    flex-direction: column;
    justify-content: center;
}

.cate-col .icon {
    width: 90rpx;
    height: 90rpx;
    margin: 0 auto;
}

.cate-col .text {
    margin-top: 20rpx;
}

.cate-cols .mue-navigator {
    border: none;
    border-radius: 0;
}

.cate-cols .mue-active {
    opacity: .7;
    background-color: rgba(0, 0, 0, .1);
}

/** product **/
.sec-title {
    display: flex;
    font-weight: 600;
    padding-top: 50rpx;
    padding-bottom: 40rpx;
    align-items: center;
    justify-content: space-between;
}

.sec-title .right {
    color: #7c829d;
    font-size: 26rpx;
}

.products-wrapper .sec-title {
    padding-bottom: 20rpx;
}

.product-cols {
    width: 100%;
    padding-left: 20rpx;
    white-space:nowrap;
}

.product-col {
    display: inline-block;
    width: 286rpx;
	height: 386rpx;
    margin: 20rpx;
    margin-right: 0;
    font-size: 0;
    text-align: center;
    border-radius: 6rpx;
	background-color: #ffffff;
	box-shadow: 0rpx 8rpx 27rpx 3rpx rgba(135, 142, 160, 0.15);
}

.product-col .p-img {
    width: 70rpx;
    height: 126rpx;
    margin-top: 40rpx;
}

.product-col .p-name {
    margin-top: 30rpx;
    color: #292e3e;
    font-size: 26rpx;
}

.product-col .p-desc {
    margin-top: 20rpx;
   	color: #cacee0;
    font-size: 22rpx;
}

.product-col .p-price {
   	color: #cacee0;
    font-size: 24rpx;
}

.product-col .p-button {
    display: flex;
    width: 112rpx;
    height: 40rpx;
    margin:  0 auto;
    margin-top: 30rpx;
    color: #fabe00;
    font-size: 20rpx;
    line-height: 40rpx;
    border-radius: 20rpx;
    align-items: center;
    justify-content: center;
    border: solid 1rpx #fabe00;
}

/** recycle-process **/
.recycle-process {
    margin-top: 30rpx;
    background-color: #fff;
}

.recycle-process .icon {
    width: 90rpx;
    height: 90rpx;
}

.recycle-process .grid-col {
    color: #7c829d;
    font-size: 24rpx;
    text-align: center;
}

.recycle-process .col-text {
    margin-top: 20rpx;
}

/** service ensure **/
.service-ensure {
    background-color: #fff;
}

.service-ensure .icon {
    width: 325rpx;
    height: 144rpx;
}

.service-ensure .sec-content {
    font-size: 0;
    margin-left: 20rpx;
    margin-right: 20rpx;
}

.service-ensure .grid-col {
    position: relative;
    margin-bottom: 20rpx;
    padding-left: 20rpx;
    border-radius: 6rpx;
}

.service-ensure .col-text {
    position: absolute;
    left: 50rpx;
    top: 20rpx;
    color: #fff;
    font-size: 26rpx;
    font-weight: bold;
}

/** partner **/
.partner .sec-content {
    font-size: 0;
    margin-left: 30rpx;
    margin-right: 30rpx;
    margin-bottom: 40rpx;
}
.partner .grid-cols {
    display: flex;
    justify-content: space-around;
}

.partner .sec-title {
    padding-bottom: 30rpx;
}

.partner .grid-col {
    display: flex;
    width: 210rpx;
    height: 120rpx;
    margin: 10px;
    border-radius: 6rpx;
    align-items: center;
    justify-content: center;
    background-color: #ffffff;
    box-shadow: 0rpx 10rpx 27rpx 3rpx rgba(135, 142, 160, 0.12);
}

.partner .icon {
    width: 149rpx;
    height: 41rpx;
}