.container {
  background: #fff;
}

.price-result {
  position: relative;
  width: 670rpx;
  height: 280rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  font-size: 0;
  color: #ffffff;
  text-align: center;
}

.price-result-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

.price-result-inner {
  z-index: 2;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: transparent;
}

.price-result .icon-money {
  display: block;
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
  margin-top: 20rpx;
}

.price-wrapper {
  overflow: visible;
  position: relative;
  display: inline-block;
  margin-top: 29rpx;
  font-size: 0;
  line-height: 1;
}

.price-wrapper .label {
  position: absolute;
  top: 4rpx;
  left: -36rpx;
  font-size: 36rpx;
}

.price-wrapper .number {
  font-size: 66rpx;
  line-height: 1;
}

.price-desc {
  margin-top: 9rpx;
  font-size: 22rpx;
}

.select-info {
  padding: 0 40rpx;
}

.grid-col {
  display: flex;
  float: none;
  width: 100%;
  margin-top: 49rpx;
  color: #292e3e;
  font-size: 32rpx;
  align-items: center;
  justify-content: space-between;
}

.grid-col-rit {
  color: #5498ff;
  font-size: 26rpx;
}

.select-list {
  margin-top: 49rpx;
}

.select-item {
  float: left;
  width: 217rpx;
  height: 70rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  color: #aab0cb;
  font-size: 24rpx;
  text-align: center;
  line-height: 70rpx;
  background-color: #f9f9fb;
}

.mr-0 {
  margin-right: 0;
}

.next-predict {
  height: 70rpx;
  color: #7c829d;
  font-size: 26rpx;
  line-height: 70rpx;
}

.next-predict .arrow_down {
  width: 10rpx;
  height: 24rpx;
  color: #66d4bb;
}

.chart-tit {
  display: flex;
  align-items: center;
  justify-content: center;
}

.chart-tit .mine-price,
.chart-tit .mrk-price {
  display: inline-block;
  color: #aab0cb;
  font-size: 22rpx;
  text-align: center;
}

.mrk-price .line,
.mine-price .line {
  width: 38rpx;
  height: 4rpx;
  margin: 0 auto;
  margin-bottom: 19rpx;
}

.mine-price .line {
  background: #fabe00;
}

.mrk-price .line {
  background: #b967ea;
}