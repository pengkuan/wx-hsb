page {
  background: #fff;
}

.order-head {
  display: flex;
  width: 670rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  border-radius: 10rpx;
  background-image: linear-gradient(to right, #6dd8ff 0%, #64a6ff 100%);
}

.icon_order-state {
  width: 73rpx;
  height: 98rpx;
  margin: 50rpx 42rpx;
}

.order-state-cols {
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
}

.order-state-col {
  display: flex;
  width: 487rpx;
  color: #ffffff;
  align-items: center;
  justify-content: space-between;
}

.order-state-name {
  font-size: 32rpx;
}

.order-state-time {
  font-size: 24rpx;
}

.view-cols {
  background: #f9f9fb;
}

.view-col {
  padding: 0 40rpx;
  padding-bottom: 40rpx;
  margin-bottom: 20rpx;
  font-size: 0;
  background: #fff;
}

.view-col-title {
  padding-top: 50rpx;
  color: #292e3e;
  font-size: 28rpx;
}

.view-col-content {
  padding-top: 40rpx;
  color: #7c829d;
  font-size: 26rpx;
  line-height: 32rpx;
}

.view-col-1 .view-col-content {
  color: #7c829d;
  font-size: 26rpx;
  line-height: 48rpx;
}

.view-col-1 .route-li{
  padding-bottom: 20rpx;
  position: relative;
  padding-left: 50rpx;
  position: relative;
  overflow: visible;
  display: none;
}
.view-col-1 .route-li.showAll{
  display: block;
}
.route-li.first,.route-li.second{
  display: block;
}
