/** user-box **/
.container {
  background: #fff;
}

.user-box {
  position: relative;
  display: flex;
  width: 670rpx;
  height: 200rpx;
  margin: 0 auto;
  margin-top: 30rpx;
  color: #fff;
  font-size: 32rpx;
  border-radius: 12rpx;
  align-items: center;
  background-color: #fff;
  background-image: linear-gradient(0deg, #f9d45d 0%, #e7b631 100%);
}

.user-box .avator {
  float: left;
  width: 120rpx;
  height: 120rpx;
  margin: 40rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}

.user-box .mobile {
  margin-top: 20rpx;
  font-size: 26rpx;
}

.user-box .button {
  color: #fff;
  font-size: 28rpx;
  border-color: #fff;
}

.box-right {
  position: absolute;
  right: 20rpx;
}

.grid-cols {
  padding-top: 50rpx;
  padding-bottom: 30rpx;
  background-color: #fff;
}

.grid-col {
  float: left;
  width: 33.3333%;
  color: #7c829d;
  font-size: 0;
  text-align: center;
}

.grid-fore1 .grid-col-icon {
  width: 90rpx;
  height: 90rpx;
}

.grid-fore1 .grid-col-text {
  width: 80%;
  height: 64rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  font-size: 26rpx;
  line-height: 64rpx;
}

.grid-fore2 {
  margin-top: 20rpx;
}

.grid-fore2 .grid-col {
  margin-bottom: 40rpx;
}

.grid-fore2 .grid-col-icon {
  width: 46rpx;
  height: 46rpx;
}

.grid-fore2 .grid-col-text {
  color: #7c829d;
  font-size: 26rpx;
}

.mue-button {
  background: #fff;
  border: none;
}

.mue-button:after {
  border: none;
}