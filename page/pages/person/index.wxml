<view class="page">
    <view class="user-box">
        <image class="avator" mode="scaleToFill" src="{{userInfo.avatarUrl}}"></image>
        <view class="box-middle">
            <view class="nickname">{{userInfo.nickName}}</view>
            <view class="mobile">18620343136</view>
        </view>
        <view class="box-right">
            <button size="mini" plain="true" class="button">解绑</button>
        </view>
    </view>
    <view class="grid-cols grid-fore1">
        <button class="grid-col mue-button" wx:for="{{ grid1Cols }}">
            <image class="grid-col-icon" src="{{ item.icon }}"></image>
            <view class="grid-col-text">{{ item.text }}</view>
        </button>
    </view>
    <view class="grid-cols grid-fore2">
        <button class="grid-col mue-button" wx:for="{{ grid2Cols }}">
            <image class="grid-col-icon" src="{{ item.icon }}"></image>
            <view class="grid-col-text">{{ item.text }}</view>
        </button>
    </view>
</view>