page {
  height: 100%;
}

.container {
  height: 100%;
  background-color: #fff;
}

.form {
  height: 100%;
  width: 580rpx;
  margin: 0 auto;
  margin-top: 60rpx;
}

.form .input-wrapper {
  display: flex;
  padding-top: 60rpx;
  padding-bottom: 30rpx;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #cacee0;
}

.form .mue-input {
  height: 26rpx;
  color: #292e3e;
  font-size: 32rpx;
  line-height: 26rpx;
}

.form .code-wrapper {
  display: flex;
  align-items: center;
}

.form .input-code {
  display: inline-block;
  width: 60%;
}

.form .button-code {
  width: 152rpx;
  height: 56rpx;
  padding: 16rpx;
  margin-right: 0;
  color: #aab0cb !important;
  font-size: 24rpx;
  line-height: 24rpx;
  border-radius: 4rpx;
  background-color: #fff;
}

.form .button-code:after {
  border-radius: 4rpx;
  border: solid 1rpx #cacee0;
}

.form .mue-button-primary {
  height: 90rpx;
  margin-top: 80rpx;
  color: #fff;
  font-size: 32rpx;
  line-height: 90rpx;
  border-radius: 4rpx;
  letter-spacing: 2rpx;
  background-color: #fabe00;
}

.form .mue-button-primary:after {
  display: none;
}

.bottom-bg {
  position: fixed;
  bottom: 12rpx;
  width: 100%;
  height: 118rpx;
}