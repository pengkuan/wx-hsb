<!--page/pages/deblock/index.wxml-->
<view class="container">
  <view class="header">
    <view wx:for="{{phones}}" data-phone="{{item.phone}}" class="phones {{ item.phone == phone ? 'selected' : '' }}" bindtap="switchPhone">{{item.name}}</view>
  </view>
  <view wx:for="{{phones}}" class="content" wx-if="{{item.phone == phone}}">
    <swiper indicator-dots="{{indicatorDots}}"
    autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" current="{{swiperCurrent}}" bindchange="swiperChange">
      <block wx:for="{{item.imgUrls}}">
        <swiper-item>
          <image src="{{item.url}}" class="slide-image" width="375" height="150"/>
        </swiper-item>
      </block>
    </swiper>
    <view class="dots">  
      <block wx:for="{{item.imgUrls}}">
          <view class="dot{{index == swiperCurrent ? ' active' : ''}}">{{index+1}}</view>
          <view class="txt{{index == swiperCurrent ? ' active' : ''}}">{{item.txt}}</view>
      </block> 
    </view>  
  </view>
  <view class="footer">
  <text wx:if="{{phone == 'apple'}}">注：以上教程为IOS 10.0以上版本</text>
  <text wx:else>注：以上教程为Android 7.0 版本</text>
  </view>
</view>
