.container {
  background: #fff;
}

/** search box **/
.search {
  display: flex;
  width: 100%;
  padding: 20rpx 40rpx;
  margin: 0 auto;
  align-items: center;
  border-bottom: 1rpx solid #eff0f6;
  justify-content: space-between;
}

.back {
  color: #fabe00;
  font-size: 28rpx;
  line-height: 42rpx;
}

.search-box {
  display: flex;
  width: 590rpx;
  height: 70rpx;
  border-radius: 6rpx;
  align-items: center;
  background-color: #f9f9fb;
  justify-content: space-between;
}

.icon-search {
  width: 26rpx;
  height: 26rpx;
  margin-left: 22rpx;
  margin-right: 22rpx;
}

.search-input {
  flex: 1;
  margin-left: 20rpx;
  height: 30rpx;
  color: #7c829d;
  font-size: 26rpx;
  line-height: 36rpx;
  letter-spacing: 0px;
}

/** history **/
.search-hot .hd,
.search-history .hd {
  display: flex;
  height: 82rpx;
  padding: 0 40rpx;
  color: #cacee0;
  font-size: 28rpx;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #eff0f6;
}

.icon-delete {
  width: 24rpx;
  height: 26rpx;
}

.p-item {
  float: left;
  width: 50%;
  height: 80rpx;
  padding-left: 40rpx;
  margin-top: -1rpx;
  color: #292e3e;
  font-size: 24rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #eff0f6;
}

.border-rt {
  border-right: 1rpx solid #eff0f6;
}

/** search list **/
.mue-header {
  z-index: 2;
  position: fixed;
  top: 0;
  background: #fff;
}

.mue-content {
  position: fixed;
  top: 112rpx;
  right: 0;
  left: 0;
  bottom: 0;
}

.searchList {
  width: 100%;
  height: 100%;
}

.searchList .p-item {
  float: left;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
}

.searchList .no-more {
  float: left;
  height: 60rpx;
  padding: 0 40rpx;
  color: #292e3e;
  font-size: 24rpx;
  line-height: 60rpx;
}