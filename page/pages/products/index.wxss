@import "../../components/search-entry.wxss";

.page {
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
}

/** category **/
.category-wrapper {
  overflow: visible;
  position: relative;
  margin-top: 20rpx;
  background-color: #fff;
}

.cate-cols {
  height: 96rpx;
  line-height: 96rpx;
  white-space: nowrap;
  box-sizing: border-box;
  border-bottom: 1px #ddd solid;
}

.cate-col {
  display: inline-block;
  width: 33.3333%;
  color: #aab2bd;
  font-size: 32rpx;
  text-align: center;
}

.cate-col.current {
  color: #000;
  font-weight: bold;
}

.category-wrapper .line {
  z-index: 2;
  position: absolute;
  top: 92rpx;
  left: 0;
  width: 33.3333%;
  height: 4rpx;
  transform: scaleX(.2);
  transform-origin: 50% 50%;
  background-color: #000;
  transition: all 400ms;
}

.content-wrapper {
  display: flex;
  position: absolute;
  width: 100%;
  top: 216rpx;
  bottom: 0;
}

/** brand **/
.brand-cols-wrapper {
  width: 26%;
  height: 100%;
}
.brand-cols {
  height: 100%;
  color: #7c829d;
  font-size: 28rpx;
  background-color: #f9f9fb;
}
.brand-col {
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}
.brand-col.current {
  color: #fabe00;
  background: #fff;
}

/** product **/
.product-cols-wrapper {
  flex: 1;
}
.product-cols {
  height: 100%;
  background-color: #fff;
}
.product-col {
  display: flex;
  width: 100%;
  height: 100rpx;
  padding-left: 30rpx;
  padding-right: 40rpx;
  line-height: 100rpx;
  color: #7c829d;
  font-size: 28rpx;
  align-items: center;
  box-sizing: border-box;
}
.product-col .sort-number {
  min-width: 40rpx;
  padding: 6rpx 8rpx;
  margin-right: 20rpx;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  line-height: 26rpx;
  background-color: #dddee7;
}

.product-col .fore1 {
  background: #ff4e6f;
}

.product-col .fore2 {
  background: #ff9a68;
}

.product-col .fore3 {
  background: #ffd59f;
}