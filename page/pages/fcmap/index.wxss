.container {
  background: #fff;
}

/** search box **/
.search {
  z-index: 9999;
  display: flex;
  width: 100%;
  padding: 20rpx 40rpx;
  margin: 0 auto;
  align-items: center;
  /* border-bottom: 1rpx solid #eff0f6; */
  justify-content: space-between;
}
/* .mue-header.search{
  position: fixed;
  top: 0;
  background: transparent !important;
} */

.search-box {
  display: flex;
  width: 100%;
  height: 70rpx;
  border-radius: 6rpx;
  align-items: center;
  background-color: #f9f9fb;
  justify-content: space-between;
}

.icon-search {
  width: 26rpx;
  height: 26rpx;
  margin-left: 20rpx;
  margin-right: 9rpx;
}

.search-input {
  flex: 1;
  height: 30rpx;
  color: #7c829d;
  font-size: 26rpx;
  display: flex;
  align-items: center;
}
.mue-content{
  position: relative;
  width: 100%;
  z-index: 9998;
}
.mue-content map{
  width: 100%;
  height: 100%;
}
.icon-open{
  width: 46rpx;
  height: 14rpx;
  position: absolute;
  top: 10rpx;
  left: 50%;
  transform: translateX(-50%);
}
.icon-close{
  width: 46rpx;
  height: 14rpx;
  position: absolute;
  top: 10rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 99;
}
.mue-footer{
  box-sizing: border-box;
  padding: 20rpx 0; 
  z-index: 10000;
  overflow: hidden;
}
.map-count{
  text-align: center;
  font-size: 28rpx;
  color: #7c829d;
  line-height: 50rpx;
}
.map-count text{
  color: #313440;
}
.map-text{
  border-bottom: 1px solid#f9f9fb;
  padding: 40rpx 0;
}
.map-text:last-child{
  border-bottom: none;
}
.map-text text{
  font-size: 28rpx;
  color: #7c829d;
}
.map-text .h1{
  font-size: 32rpx;
	color: #292e3e;
  display: block;
}

